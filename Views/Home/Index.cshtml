<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body, html {
        font-family: Arial, sans-serif;
    }

    .slider {
        width: 100%;
        height: 100vh;
        overflow: hidden;
        position: relative;
    }

    .mySlides {
        width: 100%;
        height: auto;
        display: none;
    }

        .mySlides:first-child {
            display: block;
        }

    .content {
        padding: 20px;
        text-align: center;
        margin-bottom: 10%;
    }

    .image-grid {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 10px;
        padding: 20px;
    }

    .image-grid-item {
        text-align: center;
    }

    .image-grid img {
        width: 100%;
        height: auto;
    }

    .car-name {
        margin-top: 10px;
    }

    .car-name {
        margin-top: 10px;
    }

    .card-container {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 20px;
        padding: 20px;
    }

    .card {
        background-color: #001f3f;
        color: white;
        padding: 50px;
        border-radius: 10px;
        text-align: center;
        transition: background-color 0.3s ease;
    }

        .card:hover {
            background-color: #007bff;
        }
</style>

