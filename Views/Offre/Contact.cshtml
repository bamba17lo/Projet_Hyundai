@{
    ViewData["Title"] = "Formulaire de Demande - Hyundai Sénégal";
}

<style>
    .hero-section {
        background: linear-gradient(rgba(0,0,0,0.6), rgba(0,0,0,0.6)), url('@Url.Content("~/images/hyundai-showroom.jpg")');
        background-size: cover;
        background-position: center;
        color: white;
        padding: 100px 0;
        text-align: center;
    }

    .form-section {
        padding: 80px 0;
        background-color: #f8f9fa;
    }

    .form-container, .map-container {
        background-color: white;
        border-radius: 10px;
        box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        padding: 40px;
        height: 100%;
    }

    .form-control:focus {
        border-color: #002c5f;
        box-shadow: 0 0 0 0.2rem rgba(0, 44, 95, 0.25);
    }

    .btn-hyundai {
        background-color: #002c5f;
        color: white;
        padding: 10px 30px;
        border: none;
        border-radius: 5px;
        transition: all 0.3s ease;
    }

        .btn-hyundai:hover {
            background-color: #00458e;
            color: white;
        }

    .form-check-input:checked {
        background-color: #002c5f;
        border-color: #002c5f;
    }

    .map-frame {
        width: 100%;
        height: 400px;
        border: none;
        border-radius: 10px;
    }

</style>

<div class="hero-section">
    <div class="container">
        <h1 class="display-4">Formulaire de Demande</h1>
        <p class="lead">Remplissez ce formulaire pour toute demande spécifique</p>
    </div>
</div>

<section class="form-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-7 mb-4">
                <div class="form-container">
                    <h2 class="mb-4">Votre Demande</h2>
                    <form>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="firstName" class="form-label">Prénom</label>
                                <input type="text" class="form-control" id="firstName" required>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="lastName" class="form-label">Nom</label>
                                <input type="text" class="form-control" id="lastName" required>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label for="email" class="form-label">Email</label>
                            <input type="email" class="form-control" id="email" required>
                        </div>
                        <div class="mb-3">
                            <label for="phone" class="form-label">Téléphone</label>
                            <input type="tel" class="form-control" id="phone" required>
                        </div>
                        <div class="mb-3">
                            <label for="requestType" class="form-label">Type de demande</label>
                            <select class="form-select" id="requestType" required>
                                <option value="">Choisissez une option</option>
                                <option value="devis">Demande de devis</option>
                                <option value="essai">Réservation d'essai</option>
                                <option value="info">Demande d'informations</option>
                                <option value="autre">Autre</option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label for="vehicleModel" class="form-label">Modèle de véhicule intéressé</label>
                            <select class="form-select" id="vehicleModel">
                                <option value="">Choisissez un modèle</option>
                                <option value="i10">i10</option>
                                <option value="i20">i20</option>
                                <option value="tucson">Tucson</option>
                                <option value="santa-fe">Santa Fe</option>
                                <option value="autre">Autre</option>
                            </select>
                        </div>
                        <div class="mb-3">
                            <label for="message" class="form-label">Votre message</label>
                            <textarea class="form-control" id="message" rows="5" required></textarea>
                        </div>
                        <div class="mb-3 form-check">
                            <input type="checkbox" class="form-check-input" id="newsletter">
                            <label class="form-check-label" for="newsletter">Je souhaite recevoir la newsletter Hyundai Sénégal</label>
                        </div>
                        <div class="mb-3 form-check">
                            <input type="checkbox" class="form-check-input" id="terms" required>
                            <label class="form-check-label" for="terms">J'accepte les conditions d'utilisation et la politique de confidentialité</label>
                        </div>
                        <button type="submit" class="btn btn-hyundai">Envoyer la demande</button>
                    </form>
                </div>
            </div>
            <div class="col-lg-5">
                <div class="map-container">
                    <h2 class="mb-4">Nous Trouver</h2>
                    <iframe class="map-frame" src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3859.0517140750333!2d-17.467248485727583!3d14.716279789731768!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0xec1731b4c1f7b9f%3A0x5f1e68ba04a7a51c!2sDakar%2C%20Senegal!5e0!3m2!1sen!2sus!4v1625837345678!5m2!1sen!2sus" allowfullscreen="" loading="lazy"></iframe>
                    <div class="mt-3">
                        <h5>Hyundai Sénégal</h5>
                        <p>123 Rue de la République<br>Dakar, Sénégal</p>
                        <p>Téléphone : +221 33 123 4567<br>Email : contact@hyundai-senegal.com</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>